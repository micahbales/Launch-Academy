<h1><%= @show.title %></h1>

<dl>
  <dt>Network:</dt>
  <dd><%= @show.network %></dd>
  <dt>Years:</dt>
  <dd><%= @show.starting_year %> - <%= @show.ending_year %></dd>
  <dt>Genre:</dt>
  <dd><%= @show.genre %></dd>
</dl>

<p><%= @show.synopsis %></p>

<h4><a href="#" id="edit_entry">Edit Entry</a></h4>

<div id="entry_editor">
  <form action="/television_shows/<%= @show.id %>/edit" method="get">
    <div>
      <label for="title">Title:</label>
      <input type="text" id="title" name="television_show[title]" value="<%= @show.title %>">
    </div>

    <div>
      <label for="network">Network:</label>
      <input type="text" id="network" name="television_show[network]" value="<%= @show.network %>">
    </div>

    <div>
      <label for="starting_year">Starting Year:</label>
      <input type="number" id="starting_year" name="television_show[starting_year]" value="<%= @show.starting_year %>">
    </div>

    <div>
      <label for="ending_year">Ending Year:</label>
      <input type="number" id="ending_year" name="television_show[ending_year]" value="<%= @show.ending_year %>">
    </div>

    <div>
      <label for="genre">Genre:</label>
      <select id="genre" name="television_show[genre]">
        <% TelevisionShow::GENRES.each do |genre| %>
          <% if @show.genre == genre %>
            <option selected><%= genre %></option>
          <% else %>
            <option><%= genre %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div>
      <label for="synopsis">Synopsis:</label>
      <textarea id="synopsis" name="television_show[synopsis]" value="<%= @show.synopsis %>"></textarea>
    </div>

    <input type="submit" value="Update TV Show">
  </form>
</div>

<a href="/television_shows">Back to all shows</a>
