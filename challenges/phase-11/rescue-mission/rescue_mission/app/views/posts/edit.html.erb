<h1>Edit Post: <%= @post.title %></h1>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :description %>
  <%= f.text_area :description %><br />

  <%= f.submit "Submit" %>
<% end %>

<%= button_to "Delete Post", post_path(@post), method: :delete %>
