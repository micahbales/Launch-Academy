<h2>
  <%= @video.title %>
</h2>

<p>
  <strong>Year:</strong>
  <%= @video.year %>
</p>

<p>
  <strong>Description:</strong>
  <%= @video.description %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @video.genre.name %>
</p>

<p>
  <strong>Format:</strong>
  <%= @video.format.name %>
</p>

<hr />

<h2>Comments</h2>
<div id="comments">
  <% @video.comments.each do |comment| %>
    <h3><%= comment.title %></h3>
    <p><%= comment.content %></p>
  <% end %>
</div>

<hr />

<h2>New Comment</h2>
<div class="new-comment">
  <%= render "comments/form" %>
</div>

<hr />

<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
